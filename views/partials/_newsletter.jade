extends ../layout

block head
	meta(property="og:image" content="#{asset(entry.featuredImage)}")
	meta#page-title(property="og:title" content= entry.title)
	meta#page-description(property="og:description" content= entry.featuredText)

block content
	#blog-content.content
		section#hero.clip.parallax.cover.height-70(data-overlay="7")
			.signature-container
			.container.pos-vertical-center
				.row.text-left
					.col-sm-12
						h1#updatetitle Newsletters
						h6#featuredtext.featuredText December
		
		- var stories = 0
		for story in entry.stories
			if stories === 0
				section.newsletter-header
					.container.imagebg.height-70
						.background-image-holder
							img(alt='background', src='#{asset(story.fields.featuredImage)}')
						.col-sm-12.pos-vertical-center
							h1#updatetitle= story.fields.title
							h6#featuredtext.featuredText= story.fields.featuredText
			else
				section
					.container.imagebg.height-70
						.background-image-holder
							img(alt='background', src='#{asset(story.fields.featuredImage)}')
						.col-sm-12.pos-vertical-center
							h1#updatetitle= story.fields.title
							h6#featuredtext.featuredText= story.fields.featuredText
			- stories++
			section#updates-content
				- var date = new Date(story.fields.date);
				.container
					.row
						.col-sm-12
							p.color--green= story.fields.location + ' - ' + (date.getMonth()+1) +' '+ date.getDate() +' '+ date.getFullYear()
				
					//-!= entry.mainContent
					if story.fields.textAreas != undefined
						for item in story.fields.textAreas
							if item.fields.images != undefined
								.row
									.col-sm-12.unpad
										.masonry
												.masonry__container
													if item.fields.imageWidth != undefined
														for image in item.fields.images
															.masonry__item.col-xs-6.col-sm-3
																a(href='#{asset(image)}', data-lightbox="Gallery 1")
																	img(src="#{asset(image)}")
																	if (item.fields.displayImageTitle === 'yes')
																		span.block.small.color--blue= image.fields.title
													else
														for image in item.fields.images
															.masonry__item.col-xs-12.col-sm-12
																a(href='#{asset(image)}', data-lightbox="Gallery 1")
																	img(src="#{asset(image)}")
																	if (item.fields.displayImageTitle === 'yes')
																		span.block.small.color--blue= image.fields.title
											
							if item.fields.subhead != undefined
								.row.mt--1
									.col-sm-12.col-md-10.col-lg-8
										h6.color--green= item.fields.subhead
							if item.fields.body != undefined
								.row
									.col-sm-12.col-md-10.col-lg-8
										pre!= item.fields.body
							if item.fields.videoIframe != undefined
								.row
									.col-sm-12
										!= item.fields.videoIframe
			
			if story.fields.largeImage != undefined
				.section.cover
					.container
						.row
							.col-sm-12
								img(src='#{asset(story.fields.largeImage)}')

			
			if story.fields.imageSubtext != undefined
				.container
					.row
						#text-overlap.corner-point-white.col-lg-6.col-sm-8.float-right.bg--white.clearfix
							p.color--blue= story.fields.imageSubtext
							if story.fields.imageSubtextName != undefined
								p.small.color--green= story.fields.imageSubtextName
								

			if story.fields.textAreas2 != undefined
				.container
					for item in story.fields.textAreas2
						if item.fields.images != undefined
							.row
								.col-sm-12.unpad
									.masonry
											.masonry__container
												if item.fields.imageWidth != undefined
													for image in item.fields.images
														.masonry__item.col-xs-6.col-sm-3
															a(href='#{asset(image)}', data-lightbox="Gallery 2")
																img(src="#{asset(image)}")
																if (item.fields.displayImageTitle === 'yes')
																	span.small.color--blue= image.fields.title
												else
													for image in item.fields.images
														.masonry__item.col-xs-12.col-sm-12
															a(href='#{asset(image)}', data-lightbox="Gallery 2")
																img(src="#{asset(image)}")
																if (item.fields.displayImageTitle === 'yes')
																	span.small.color--blue= image.fields.title
						
						if item.fields.subhead != undefined
							.row.mt--1
								.col-md-6.col-sm-12
									h6.color--green= item.fields.subhead
						if item.fields.body != undefined
							.row
								if story.fields.bluePullquote != undefined
									.col-md-6.col-sm-12.blue-pullquote
										h6.color--blue= story.fields.bluePullquote
								.col-md-6.col-sm-12
									pre!= item.fields.body

								
						if item.fields.videoIframe != undefined
							.row
								.col-sm-12
									!= item.fields.videoIframe
			if story.fields.checklist != undefined
				.mb--2.mt--2.bg--blue
					.container
						.row.mt--1.mb--1
							.col-sm-12
								for item in story.fields.checklist
									h6.color--white.check-mark-before= item

			if story.fields.textAreas3 != undefined
				.container
					for item in story.fields.textAreas3
						if item.fields.images != undefined
							.row
								.col-sm-12.unpad
									.masonry
											.masonry__container
												if item.fields.imageWidth != undefined
													for image in item.fields.images
														.masonry__item.col-xs-6.col-sm-3
															a(href='#{asset(image)}', data-lightbox="Gallery 3")
																img(src="#{asset(image)}")
																if (item.fields.displayImageTitle === 'yes')
																	span.small.color--blue= image.fields.title
												else
													for image in item.fields.images
														.masonry__item.col-xs-12.col-sm-12
															a(href='#{asset(image)}', data-lightbox="Gallery 3")
																img(src="#{asset(image)}")
																if (item.fields.displayImageTitle === 'yes')
																	span.small.color--blue= image.fields.title
						//-.row.mt--1
							if item.fields.image != undefined
								if item.fields.imageWidth != undefined
									div(class="#{item.fields.imageWidth}")
										img(src="#{asset(item.fields.image)}")
								else 
									.col-sm-12
										img(src="#{asset(item.fields.image)}")
						if item.fields.subhead != undefined
							.row.mt--1
								.col-sm-12.col-md-10.col-lg-8
									h6.color--green= item.fields.subhead
						if item.fields.body != undefined
							.row
								.col-sm-12.col-md-10.col-lg-8
									pre!= item.fields.body
						if item.fields.videoIframe != undefined
							.row
								.col-sm-12
									!= item.fields.videoIframe

			if story.fields.videoEmbedIframe != undefined
				section
					.container
						.row
							.col-sm-12
								!= story.fields.videoEmbedIframe
			
			if story.fields.gallery != undefined
				section#image-gallery
					.container
						.row
							.col-sm-12.unpad
								.masonry
										.masonry__container
											for image in story.fields.gallery
												.masonry__item.col-xs-6.col-sm-3
													a(href='#{asset(image)}', data-lightbox="Gallery")
														img(src="#{asset(image)}")
													span.small.color--blue= image.fields.title


			if story.fields.mainContent != undefined
				!= story.fields.mainContent

			if story.fields.downloads != undefined
				.container.mb--2.mt--2
					.row
						.col-sm-12
							h5.color--blue= contentful.Support[0].downloads
					for item in story.fields.downloads
						if item.fields.file != undefined
							.row
								.col-sm-12(style="margin:10px 0;")
									a.btn.btn-blue-white.download-before-blue-white(href='#{asset(item.fields.file)}', target='_blank', rel='noopener')
										span.btn__text= item.fields.title

		section#social-share.mb--2
			.container
				.row.text-left
					.col-sm-12
						.float-left
							h6.unmarg.color--blue= contentful.Social[0].shareHeader
						#share-icons.float-left
							include _social-icons
		include _4updates
			//-section#more-updates
				.container
					.row
						.col-sm-12.text-left
							h3.color--green= contentful.Home[0].updatesSectionTitle
						
						- var i = 0; var e = (contentful.Updates.length >=4) ? 4 : contentful.Updates.length; while (i<4){
						- var date = new Date(contentful.Updates[i].date);

							.col-md-12.unpad.update-post.bg--white.clearfix
								a(href="#{contentful.Updates[i]._url}")
									p.color--green.small.unmarg.float-left.col-xs-12 Update #{date.getMonth() +'/'+ date.getDate() +'/'+ date.getFullYear()}
									h4.color--blue.unmarg.float-left.col-xs-10= contentful.Updates[i].title
									div.arrow-right.float-right
									//-i.icon.icon--sm.fa.fa-arrow-circle-o-right.color--green.float-right.col-xs-2
						- i++}

	script.
		document.querySelector('#share-icons .facebook').onclick = function(e){
		e.preventDefault(0)
			FB.ui({
				method: 'share',
				mobile_iframe: true,
				href: window.location.href,
			}, function(response){});

		}
		
