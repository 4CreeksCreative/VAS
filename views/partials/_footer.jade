

footer
	.container
		.row
			#footer-blue-box.col-md-6.col-xs-12.float-left
				!= contentful.Footer[0].blueBoxContent
				a.btn.btn--primary.type--uppercase(href='#' style="margin-top:25px;")
					span.btn__text= contentful.Footer[0].blueBoxButtonText
			.col-md-6.col-xs-12.float-right
				!= contentful.Footer[0].subscribeContent
				input(type="text")
				a.btn.btn--primary.type--uppercase(href='#' style="margin-top:25px;")
					span.btn__text= contentful.Footer[0].subscribeButtonText
		.row.text-center
			.col-xs-12
				a(href="/")
					img.footer-logo(src="/img/logo/vasLogo-white.png")
		#footer-nav-row.row
			.col-sm-3.col-xs-9.float-center-xs.text-center-xs
				ul.footer-nav
					li
						a(href="/solutions")= contentful.Navigation[0].solutions
					li
						a(href="#")= contentful.Navigation[0].aboutUs
					li
						a(href="#")= contentful.Navigation[0].support
					li
						a(href="/inspiration")= contentful.Navigation[0].inspiration

			.col-sm-3.col-xs-9.float-center-xs.text-center-xs
				ul.footer-nav
					li
						a(href="#")=contentful.Navigation[0].dairyComp
					li
						a(href="#")= contentful.Navigation[0].feedComp
					li
						a(href="#")= contentful.Navigation[0].parlorComp

			.col-sm-3.col-xs-9.float-center-xs.text-center-xs
				ul.footer-nav
					li
						a(href="/updates")= contentful.Navigation[0].updates
					li
						a(href="#")= contentful.Navigation[0].newsletter
					li
						a(href="#")= contentful.Navigation[0].contact

			.col-sm-3.col-xs-9.float-center-xs.text-center-xs
				!= contentful.Footer[0].address
		.row.mt--3.footer-social
			.col-md-4.col-sm-6
				h4.text-center-xs= contentful.Footer[0].footerSlogan
			.col-md-4.col-sm-6
				ul.text-center
					li
						a(href="https://twitter.com/VASPRODUCTS?lang=en" target="_blank")
							img(src="/img/social/social-twitter.png")
					li
						a(href="https://www.facebook.com/ValleyAgriculturalSoftware/?ref=br_rs" target="_blank")
							img(src="/img/social/social-facebook.png")
					li
						a(href="https://www.linkedin.com/company-beta/4426837/" target="_blank")
							img(src="/img/social/social-linkedin.png")
			.col-md-4.col-sm-12
				ul.text-right.color--white.text-center-xs
					li.pad-sm
						a(href="#").small.color--white= contentful.Navigation[0].termsOfUse
					li.pad-sm
						a(href="#").small.color--white= contentful.Navigation[0].privacyAndCookies
					li.pad-sm
						a(href="#").small.color--white= contentful.Navigation[0].colofon
					li.pad-sm
						p.small= contentful.Footer[0].copyright