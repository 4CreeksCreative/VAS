extends layout

block content
	- var key = Math.floor(Math.random() * Math.floor(10))
	.content
		section#hero.imagebg.clip.parallax.cover.height-70(data-overlay="7")
			.background-image-holder
				img(alt='background', src='#{asset(contentful.Contact[0].headerImage)}')
			.signature-container
			.container
				.row
					.col-lg-6
						h1= contentful.Contact[0].headerText
						h5= contentful.Contact[0].headerSubtext

		section
			.container
				.row
					.col-sm-12
						h3.color--green= contentful.Contact[0].contactTitle
				.row
					.col-sm-12.unpad
						- var locale = contentful.Contact[0].locale == 'en' ? '' : '/'+contentful.Contact[0].locale
						form#contact-form.form-email.custom-script(data-error="#{contentful.Contact[0].sendErrorMessage}", name="Contact-#{contentful.Contact[0].locale}", netlify-honeypot="bot-field", action='#{locale}/thankyou', netlify netlify-recaptcha)
							.col-sm-12.hidden
								label don't fill this out:
								input(type='text', name='bot-field')
							.col-sm-6
								label= contentful.Contact[0].yourName
								input.name.validate-required(type='text', name='name')
							.col-sm-6
								label= contentful.Contact[0].yourDairy
								input.dairy(type='text', name='dairy-name')
							.col-sm-6
								label= contentful.Contact[0].yourEmail
								input.email.validate-required.validate-email(type='text', name='email')
							.col-sm-6
								label= contentful.Contact[0].yourPhone
								input.phone.validate-number-dash(type='text', name='phone-number')
							.col-sm-12
								label= contentful.Contact[0].yourMessage
								textarea.message.validate-required(type='text', name='message')
							.col-sm-12
								div(netlify-recaptcha)
							.float-right(style="padding-right:15px;")
								button.btn.btn-blue-white.arrow-after-blue-white(type='submit' style="position:relative;z-index:9;")
									span.btn__text= contentful.Contact[0].sendButtonText
	script.
		var key = #{key}
		$(document).ready(function(){
			$('form.form-email.custom-script').find('input.name').attr('name','name#{key}');
			$('form.form-email.custom-script').find('input.dairy').attr('name','dairy-name#{key}');
			$('form.form-email.custom-script').find('input.phone').attr('name','phone-number#{key}');
			$('form.form-email.custom-script').find('input.email').attr('name','email#{key}');
			$('form.form-email.custom-script').find('textarea.message').attr('name','message#{key}');
		})
