						h4.color--primary-1.unmarg.float-left.col-xs-10 Visit VAS at the 2017 World Dairy Expo!
						i.icon.icon--sm.fa.fa-arrow-circle-o-right.color--primary-2.float-right.col-xs-2
		

		#video-teaser.container
			.row
				.col-lg-12(style="padding:0px;")
					.imagebg.cover.height-40
						.background-image-holder
							img(alt='image', src='#{asset(contentful.Home[0].featuredVideoCover)}')
						.container.pos-vertical-center.text-center
							.modal-instance
								.video-play-icon.modal-trigger.box-shadow
								.modal-container
									.modal-content.bg-dark(data-width='60%', data-height='60%')
										!= contentful.Home[0].featuredVideo
				#overlap-video.corner-point-green.col-md-6.bg--gradient.float-right
					h5.color--white= contentful.Home[0].featuredVideoDescription
					
					.modal-instance.float-right
						a.btn.btn-white-green.type--uppercase.modal-trigger.arrow-after-white-green
							span.btn__text= contentful.Home[0].featuredVideoButtonText
						.modal-container
							.modal-content.bg-dark(data-width='60%', data-height='60%')
								!= contentful.Home[0].featuredVideo
					//-a.btn.btn--primary.type--uppercase.float-right(href='#')
						span.btn__text= contentful.Home[0].featuredVideoButtonText
								
		section#products.container
			.row.text-center
				.col-lg-12
					h3.color--primary-2= contentful.Home[0].productSectionTitle
			#products-container.row.text-center
				for product in contentful.HomeProducts
					.col-md-4.col-xs-12.float-center-sm.unpad.product-post
						.img-clip
							img(src="#{asset(product.photo)}")
						div.product-content.text-left
							h4.color--primary-1= product.title
							for item in product.list
								p.color--primary-1.unmarg.check-mark-before
									!= item
							a.mt--1.btn.btn-blue-white.type--uppercase.modal-trigger
								span.btn__text= contentful.Home[0].featuredVideoButtonText
				//-.col-md-4.col-xs-9.float-center-sm
					img.img-clip(src="/img/home/dcomp.jpg")
					div.pad-sm.text-left
						h4.color--primary-1.
							DairyComp
						p.color--primary-1.unmarg #[i.fa.fa-check.color--primary-2]    Fastest program for recording
						p.color--primary-1.unmarg #[i.fa.fa-check.color--primary-2]    Simple entry system
						p.color--primary-1.unmarg #[i.fa.fa-check.color--primary-2]    Flexible and customizable
						p.color--primary-1.unmarg #[i.fa.fa-check.color--primary-2]    Connect with on-farm systems
				//-.col-md-4.col-xs-9.float-center-sm
					img.img-clip(src="/img/home/fcomp.jpg")
					div.pad-sm.text-left
						h4.color--primary-1.
							FeedComp
						p.color--primary-1.unmarg #[i.fa.fa-check.color--primary-2]    Eliminate feed sheets
						p.color--primary-1.unmarg #[i.fa.fa-check.color--primary-2]    Monitor intakes
						p.color--primary-1.unmarg #[i.fa.fa-check.color--primary-2]    Track ingredient / ratio chemistries
						p.color--primary-1.unmarg #[i.fa.fa-check.color--primary-2]    Reduce feed wastes
				//-.col-md-4.col-xs-9.float-center-sm
					img.img-clip(src="/img/home/pcomp.jpg")
					div.pad-sm.text-left
						h4.color--primary-1.
							ParlorComp
						p.color--primary-1.unmarg #[i.fa.fa-check.color--primary-2]    Operate your parlor effectively
						p.color--primary-1.unmarg #[i.fa.fa-check.color--primary-2]    Easily and quickly accessible
						p.color--primary-1.unmarg #[i.fa.fa-check.color--primary-2]    Pen count information imports
						p.color--primary-1.unmarg #[i.fa.fa-check.color--primary-2]    Calculate costs and efficiencies
