								h6.color--primary-1.unmarg.float-left.col-xs-10= contentful.Updates[0].title
								div.arrow-right.float-right
							//-img.arrow-right(src="/img/icon/arrow-o-right.png")
				-}

				
				- var i = 1; var e = (contentful.Updates.length >=4) ? 4 : contentful.Updates.length; while (i<e){
				- var date = new Date(contentful.Updates[i].date);
					.col-md-4.col-md-offset-8.update-item.bg--white.clearfix
						a(href="#{contentful.Updates[i]._url}")
							p.color--primary-2.small.unmarg.float-left.col-xs-12 Update #{date.getMonth() +' '+ date.getDate() +' '+ date.getFullYear()}
							h6.color--primary-1.unmarg.float-left.col-xs-10= contentful.Updates[i].title
							div.arrow-right.float-right
							//-a.btn.btn--primary.type--uppercase(href='#')
								//-span.btn__text= contentful.Home[0].headerButtonText
								//-img.arrow-right(src="/img/icon/arrow-right.png")
							//-img.arrow-right(src="/img/icon/arrow-o-right.png")
							//-i.icon.icon--sm.fa.fa-arrow-circle-o-right.color--primary-2.float-right.col-xs-2
				- i++}
				//-.col-md-8.hidden-sm.hidden-xs
				//-.col-md-4.update-post.border-bottom.bg--white.clearfix
					a(href="#")
						p.color--primary-2.small.unmarg.float-left.col-xs-12 Update 2/3/2017
						h4.color--primary-1.unmarg.float-left.col-xs-10 Visit VAS at the 2017 World Dairy Expo!
						i.icon.icon--sm.fa.fa-arrow-circle-o-right.color--primary-2.float-right.col-xs-2
