extends layout

block content
	.content
		section.imagebg.clip.parallax.cover.height-80
			.background-image-holder
				img(alt='background', src='#{asset(contentful.Home[0].headerBackground)}')
			.container
				.row
					.col-lg-4
						h1= contentful.Home[0].headerLargeText
						h5= contentful.Home[0].headerSubtext
						a.btn.btn-white-green.type--uppercase.arrow-after-white-green(href='#')
							span.btn__text= contentful.Home[0].headerButtonText
							
		#updates-teaser.container
			.row.pos-relative
				//-.col-img-fix.col-sm-8.imagebg.cover.move-up
					.background-image-holder
						img(src="/img/home/cowpet.jpg")
				- var date = new Date(contentful.Updates[0].date);
				- if  (contentful.Updates.length === 1){
					a.clearfix(href="#{contentful.Updates[0]._url}")
						.col-md-12.imagebg.cover.move-up(style="min-height:500px;")
							.background-image-holder
								img(src="#{asset(contentful.Updates[0].featuredImage)}")
						.col-sm-12.update-item.move-up.clearfix(style="bottom:-10px;")
							
								p.color--primary-2.small.unmarg.float-left.col-xs-12 Update #{date.getMonth() +' '+ date.getDate() +' '+ date.getFullYear()}
								h6.color--primary-1.unmarg.float-left.col-xs-10= contentful.Updates[0].title
								div.arrow-right.float-right
							//-img.arrow-right(src="/img/icon/arrow-o-right.png")

				
				-} else {
					a.clearfix(href="#{contentful.Updates[0]._url}")
						.col-img-fix.hidden-sm.hidden-xs.col-md-8.imagebg.cover.move-up(style="min-height:400px;")
							.background-image-holder
								img(src="#{asset(contentful.Updates[0].featuredImage)}")
						.col-sm-12.col-md-8.update-item.pos-absolute.clearfix(style="bottom:-10px;")
							
