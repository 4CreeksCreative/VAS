extends layout

block content
	.content
		section
			.container
				.row
					.col-sm-12
						h3.color--green= contentful.Contact[0].appContactHeader
				.row
					.col-sm-12
						p.font-corbel.weight--normal= contentful.Contact[0].appContactBody
				.row
					.col-sm-12.unpad
						form#contact-form.form-email.custom-script(data-error="#{contentful.Contact[0].sendErrorMessage}", name='App Form', netlify-honeypot="bot-field", action='/thankyou', netlify)
							.col-sm-12.hidden
								label don't fill this out:
								input(type='text', name='bot-field')
							.col-sm-6
								label= contentful.Contact[0].yourName
								input.validate-required(type='text', name='name')
							.col-sm-6
								label= contentful.Contact[0].yourEmail
								input.validate-required.validate-email(type='text', name='email')
							.col-sm-4
								label= contentful.Contact[0].yourPhone
								input.validate-number-dash(type='text', name='phone-number')
							.col-sm-4
								label= contentful.Contact[0].yourDairy
								input(type='text', name='dairy-name')
							.col-sm-4
								label= contentful.Contact[0].numberOfCows
								input(type='text', name='number-of-cows')
							hr
							.col-sm-12
								label= contentful.Contact[0].address
								input.validate-required(type='text', name='address')
							.col-sm-4
								label= contentful.Contact[0].city
								input.validate-required(type='text', name='city')
							.col-sm-4
								label= contentful.Contact[0].state
								input.validate-required(type='text', name='state')
							.col-sm-4
								label= contentful.Contact[0].zip
								input.validate-number(type='text', name='zip')
							.float-right(style="padding-right:15px;")
								button.btn.btn-blue-white.arrow-after-blue-white(type='submit' style="position:relative;z-index:9;")
									span.btn__text= contentful.Contact[0].sendButtonText
