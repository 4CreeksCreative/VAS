// --- buttons

.btn, button
	border-radius 999px
	white-space normal
	padding 0 20px
	
	
// --- white on gray
.btn-white-gray,
.btn-white-gray:visited
	background rgba(0,0,0,0.0)
	border-color $white

.btn-white-gray .btn__text,
.btn-white-gray:visited .btn__text
	color #fff

.btn-white-gray .btn__text i,
				.btn-white-gray:visited .btn__text i
	color #fff

.btn-white-gray
	&:hover
		background $white
		border-color $gray !important
		.btn__text
			color $gray
	&:active
		background $white
		


// --- white on blue
