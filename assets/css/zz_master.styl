		margin 20px auto
@media (max-width: 992px)
	.float-center-sm
		float none
		margin 20px auto
p i
	margin-right 10px
.col-img-fix
	position absolute
	height 100%
.hamburger-toggle i
	color $green2
.language-dropdown
	border-left $border
	padding-left 10px
	img
		padding 0 10px
textarea
	min-height 300px







// --- misc classes
.border-right
	border-right $border
.border-bottom
	border-bottom $border
.move-up
	transform: translate(0px, -100px);

.btn > img.arrow-right
	height 20px
	position absolute
	right 10px
	top 0
	bottom 0
	margin auto
.social-icons
	li
			
		a
			transition 0.2s
			height 40px
			width 40px
			display block
			margin 0 10px
			border-radius 999px
			i
				padding 15px
				display block
				font-size 25px
				transform translate(-6px,-8px)
			.fa-facebook
				transform translate(-4px,-8px) !important
.check-mark-before, .check-mark-before-white
	position relative
	padding-left 35px
	&:before
		content ""
		width 20px
		height 20px
		background-position center right
		bottom 0
		top 0
		left 0px
		position absolute
		opacity 1
		margin auto
.check-mark-before:before
	background transparent url("../img/icon/check.png") no-repeat
	background-size contain
.check-mark-before-white:before
	background transparent url("../img/icon/check-white.png") no-repeat
	background-size contain
.video-play-icon
	position relative
.video-play-icon:before
	border none
	transition 0.2s
	content ""
	width 40%
	height 40%
	background transparent url("../img/icon/play.png") no-repeat center center
	background-size contain
	bottom 0
	right -12px
	top 0
	left 0
	position absolute
	display block
	opacity 1
	z-index 5
	margin auto
[class*="arrow-after-"]
	padding-right 50px !important
[class*="arrow-after-"]:after
	border none
	transition 0.2s
	content ""
	width 30px
	height 40%
	bottom 0
	right 15px
	top 0
	position absolute
	display block
	opacity 1
	z-index 2
	margin auto
.arrow-after-white-green
	&:hover:after
		background transparent url("../img/icon/arrow-right-green.png") no-repeat center center
		background-size contain
	&:after
		background transparent url("../img/icon/arrow-right.png") no-repeat center center
		background-size contain
.arrow-after-green-white
	&:hover:after
		background transparent url("../img/icon/arrow-right.png") no-repeat center center
		background-size contain
	&:after
		background transparent url("../img/icon/arrow-right-green.png") no-repeat center center
		background-size contain
.arrow-after-white-blue
	&:hover:after
		background transparent url("../img/icon/arrow-right-blue.png") no-repeat center center
		background-size contain
	&:after
		background transparent url("../img/icon/arrow-right.png") no-repeat center center
		background-size contain
.arrow-after-blue-white
	&:hover:after
		background transparent url("../img/icon/arrow-right.png") no-repeat center center
		background-size contain
	&:after
		background transparent url("../img/icon/arrow-right-blue.png") no-repeat center center
		background-size contain
.arrow-after-white-gray
	&:hover:after
		background transparent url("../img/icon/arrow-right-gray.png") no-repeat center center
		background-size contain
	&:after
		background transparent url("../img/icon/arrow-right.png") no-repeat center center
		background-size contain
		
			
	
	


// --- colors
