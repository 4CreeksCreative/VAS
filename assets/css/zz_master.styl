@import 'zy_settings'

//normalize-css()
//base()
$headerHeight = 100px
$border = 1px $bordergray solid


// --- fonts
a,p,h1,h2,h3,h4,h5,h6,input,textarea,select,option,span,li,button
	font-family $uni !important
	font-weight 600
h1,h2
	font-weight 700
h3,h4,h5,h6
	font-weight 600
p,a,input,textarea,select,option,span,li
	font-weight 600


h1
	font-size 60px
	line-height 60px
h2
	font-size 50px
h3
	font-size 30px
	line-height 34px
	font-weight 600
h4
	font-size 24px
	line-height 32px
	font-weight 700
h5
	font-size 24px
	line-height 28px
	font-weight 600
h6, label
	font-size 20px
	line-height 28px
	font-weight 600
p,button,input,textarea
	font-size 16px


.weight-500
	font-weight 500
.weight-600
	font-weight 600
.weight-700
	font-weight 700
.weight-800
