section
	padding 50px 0


// --- fixes
.dropdown__content
	padding 0 !important
section.imagebg.parallax
	min-height 750px;
	//border-radius 0px 0px 25% 0px
.img-clip
	//border-radius 0px 0px 25% 0px
.pad-sm
